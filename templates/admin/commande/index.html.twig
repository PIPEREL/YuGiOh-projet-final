{% extends 'base.html.twig' %} {% block title %}Commande{% endblock %} {% block body %}
<div class="flex items-center justify-center ">
    <table class="table bspacing w-full text-gray-400  border-separate px-10 text-sm pb-8 ">
        <thead class="bg-purple-100  text-purple-700  px-10">
            <tr class="rounded-sm">
                <th class="p-3 border-purple-800 border-l-2 border-t-2 border-b-2 rounded-l-xl">Commande</th>
                <th class="p-3 border-purple-800 border-t-2 border-b-2">Utilisateur</th>
                <th class="p-3 border-purple-800 border-t-2 border-b-2">Date de commande</th>
                <th class="p-3 border-purple-800 border-t-2 border-b-2">Prix total</th>
                <th class="p-3 border-purple-800 border-t-2 border-b-2">Type livraison</th>
                <th class="p-3 border-purple-800 border-r-2 border-t-2 border-b-2 rounded-r-xl">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
            <tr class="bg-purple-100 border-2 border-purple-700 rounded-sm">
                <td class="p-3 text-center border-purple-800 border-l-2 border-t-2 border-b-2 rounded-l-xl">
                    <div class="p-3 text-purple-700 text-center">
                        {{commande.reference|u.truncate(15,'')}}
                    </div>
                </td>
                <td class="p-3 text-purple-700 text-center border-purple-800 border-t-2 border-b-2 ">
                    {{commande.user.nom}} {{commande.user.prenom}}
                </td>
                <td class="p-3 text-purple-700 text-center border-purple-800 border-t-2 border-b-2 ">
                    {{commande.dateCreation|date('d-m-Y')}}
                </td>
                <td class="p-3 text-purple-700 text-center border-purple-800 border-t-2 border-b-2">
                    {{commande.prixTotal}} â‚¬
                </td>
                <td class="p-3 text-center border-purple-800 border-t-2 border-b-2">
                    <span class="text-purple-700 rounded-md px-2">{{commande.typeLivraison}}</span>
                </td>
                <td class="p-3 text-center border-purple-800 border-r-2 border-t-2 border-b-2 rounded-r-xl ">
                    <a href="{{path('commande_detail', {'id' : commande.id})}}" class="text-purple-500 hover:text-purple-200 mr-2">
                        <span class="text-purple-500 hover:text-blue-500 text-base">voir</span>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
<a href="{{ path('admin') }}" class=" font-semibold text-indigo-600 align-middle text-sm ml-5 "><i class="fa fa-arrow-left pb-10 " aria-hidden="true"></i> retour</a> {% endblock %}