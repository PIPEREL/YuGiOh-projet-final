{% extends 'base.html.twig' %} {% block title %}Categorie{% endblock %} {% block body %}
<h1 class="text-4xl pl-6 my-4 ">{{ categorie.nom }}</h1>
<hr class="mb-10 ">

<div class="flex pb-10 pl-5">
    <img class="h-40 w-34 " src="{{asset( 'img/categorie/') ~ categorie.img1}} " alt=" ">
    <div>
        <h2 class="text-2xl pb-5 "> Description:</h2>
        <p>{{ categorie.description }}</p>
    </div>
</div>
<div class="flex flex-col items-center text-center ">
    <table class="w-full table border-separate border border-purple-800 ">
        <thead>
            <tr>
                <th class="border border-purple-800">Id</th>
                <th class="border border-purple-800">Nom</th>
                <th class="border border-purple-800">Prix</th>
                <th class="border border-purple-800">Stock</th>
                <th class="border border-purple-800">Img</th>
                <th class="border border-purple-800">Libelle</th>
                <th class="border border-purple-800">actions</th>
                <th class="border border-purple-800">delete</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td class="border border-purple-800">{{ article.id }}</td>
                <td class="border border-purple-800">{{ article.nom }}</td>
                <td class="border border-purple-800">{{ article.prix }}â‚¬</td>
                <td class="border border-purple-800">{{ article.stock }}</td>
                <td class="border border-purple-800"><img class="w-20 h-30 block mx-auto " src="{{asset( 'img/article/') ~  article.img}} " alt=" "></td>
                <td class="border border-purple-800">{{ article.libelle }}</td>
                <td class="border border-purple-800 grid grid-rows-2 grid-flow-col gap-5 py-5">
                    <a href=" {{ path( 'article_show', { 'id': article.id}) }} "><button
                        class=" w-full self-center bg-purple-500 hover:bg-purple-700 text-white py-1 rounded ">Voir
                        <i class="fa fa-eye " aria-hidden="true "></i> </button></a>
                    <a href="{{ path( 'article_edit', { 'id': article.id}) }} "><button
                        class="w-full self-center bg-purple-500 hover:bg-purple-700 text-white py-1 rounded ">edit <i class="fas fa-edit"></i></button></a>
                </td>
                <td class="border border-purple-800 ">
                    {{ include('admin/article/_delete_form.html.twig') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7 ">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path( 'article_new') }} "><button
        class=" self-center bg-purple-500 hover:bg-purple-700 text-white my-3 p-1 rounded ">Nouvel article <i class="fas fa-plus "></i></button></a>
</div>



<a href="{{ path( 'categorie_index') }} " class=" font-semibold text-indigo-600 align-middle text-sm ml-5 "><i class="fa fa-arrow-left pb-10 " aria-hidden="true "></i> retour a la liste</a> {% endblock %}