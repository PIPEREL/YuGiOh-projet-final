<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class=" w-full self-center bg-red-500 hover:bg-red-700 text-white py-1 rounded ">Delete <i class="fa fa-trash" aria-hidden="true"></i></button>
</form>